{# app/Resources/views/registration/register.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Registrate{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/security.css') }}">
{% endblock %}

{% block body %}

<div class="row center-xs">
    <div class="col-xs-4">
        <div class="box">

            <section class="container-form">

                <div class="row center-xs">
                    <div class="col-xs-10">
                        <div class="box">
                            <img class="logo" src="{{ asset('logo.png') }}" alt="logo" width="200px">
                        </div>
                    </div>
                </div>

                {{ form_start(form) }}
                    {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}

                    <button type="submit"  class="btn">Registrate!</button>

                {{ form_end(form) }}

                <a href="{{ path('login') }}">Acceder</a>

            </section>

        </div>
    </div>
</div>

{% endblock %}