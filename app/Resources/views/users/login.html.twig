{# app/Resources/views/users/login.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/security.css') }}">
{% endblock %}

{% block body %}

<div class="row center-xs">
    <div class="col-xs-4">
        <div class="box">

            <section class="container-form">

                <div class="row center-xs">
                    <div class="col-xs-10">
                        <div class="box">
                            <img class="logo" src="{{ asset('logo.png') }}" alt="logo" width="200px">
                        </div>
                    </div>
                </div>


                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}

                <form action="{{ path('login_check') }}" method="post">
                    <label for="username" class="label-control">Username:</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />

                    <label for="password" class="label-control">Password:</label>
                    <input type="password" id="password" name="_password" class="form-control" />

                    <input type="hidden" name="_target_path" value="user_ranking" />

                    <input type="submit" name="login" value="iniciar" class="btn" />
                </form>

                <a href="{{ path('user_registration') }}">Crear cuenta</a>

            </section>

        </div>
    </div>
</div>

{% endblock %}